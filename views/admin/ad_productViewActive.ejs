<% include ad_header %>

    <div class="row">
        <div class="col-lg-12">
            <%if (message.length > 0 ){%>
                <div class="alert alert-danger">
                    <h4>
                        <%= message%>
                    </h4>
                </div>
                <%}%>
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            <h3> </h3>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTablesActive">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Brand</th>
                                        <th>Style</th>
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%product.forEach(data=>{%>
                                        <tr>
                                            <td style="width: 50px">
                                                <%=data.id %>
                                            </td>
                                            <td style="width: 100px">
                                                <p>
                                                    <img class="img-responsive zoom-img" style="width: 100%; height: 100%" src="images/<%= data.image[Object.keys(data.image)[0]]%>"
                                                        alt="" />

                                                </p>
                                            </td>
                                            <td>
                                                <div class="<%if(data.quantity<15){%> bg-danger <%}%>">
                                                    <%=data.name %>
                                                </div>

                                            </td>
                                            <td>
                                                <div class="<%if(data.quantity<15){%> bg-danger <%}%>">
                                                    <%=data.price %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="<%if(data.quantity<15){%> bg-danger <%}%>">
                                                    <%=data.quantity %>
                                                </div>

                                            </td>
                                            <td>
                                                <div class="<%if(data.quantity<15){%> bg-danger <%}%>">
                                                    <%=data.brandname %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="<%if(data.quantity<15){%> bg-danger <%}%>">
                                                    <%=data.stylename %>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="admin/product/edit/<%=data.id%>" type="button" class="btn btn-info">Update</a>

                                                <!-- <a href="admin/product/delete/<%#=data.id%>" type="button" class="btn btn-danger" onclick='return confirm("Lưu Ý: Sau khi xóa dữ liệu liên quan cũng sẽ mất.\n           Có chắc muốn xóa dòng này?");'>
                                                    Disable
                                                </a> -->
                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
        </div>
    </div>
    <% include ad_footer%>