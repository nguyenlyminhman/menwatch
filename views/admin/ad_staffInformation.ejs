<% include ad_header %>
    <div class="row">
        <div class="col-lg-12">
            <!--add new menu item-->
            <div class="col-lg-6">
                <%if (message.length > 0 ){%>
                    <div class="alert alert-info">
                        <h4>
                            <%= message%>
                        </h4>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!--add new menu item-->
            <div id="addMenu" class="col-lg-6">
                <br />
                <div class="panel panel-default">
                    <div class="panel-heading text-center">
                        
                    </div>
                    <%staff.forEach(data=>{%>
                        <form action="/admin/profile-staff/<%=data.id %>" method="POST">
                            <input type="hidden" name="_token" value="{{csrf_token()}}" />
                            <div class="form-group">
                                <label for="email">Firstname</label>
                                <input type="text" class="form-control" name="firstname" value="<%=data.firstname %>" placeHolder="Brand name" required />
                            </div>
                            <div class="form-group">
                                <label for="email">Lastname</label>
                                <input type="text" class="form-control" name="lastname" value="<%=data.lastname %>" placeHolder="Brand name" required />
                            </div>
                            <div class="form-group">
                                <label for="email">Address</label>
                                <input type="text" class="form-control" name="address" value="<%=data.address %>" placeHolder="Brand name" required />
                            </div>
                            <div class="form-group">
                                <label for="email">Phone</label>
                                <input type="text" class="form-control" name="phone" value="<%=data.phone %>" placeHolder="Brand name" required />
                            </div>
                            <button type="submit" class="btn btn-default">Update</button>
                            <button type="reset" class="btn btn-default">Reset</button>
                        </form>
                        <%})%>
                            <br>
                            <div class="clearfix"></div>
                </div>
            </div>
            <!--end add new menu item-->
        </div>
    </div>
    <% include ad_footer%>