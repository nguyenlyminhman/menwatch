<% include ad_header%>
    <%

  // Add commas as thousand separators
  function formatDate(date) {
    if (date == null)
    {
      return "";
    } else {
      var date = new Date(date);
      var d = date.getDate();
      var m = date.getMonth() + 1;
      var y = date.getFullYear();
      return m + '/' + d + '/' + y;
    }

  }
%>
        <div class="row">
            <div class="col-lg-12">
                <div class="account-main">
                    <hr style="border-style: solid; border-width: 1px; color: #73b6e1" />
                    <%product.forEach(data=>{%>
                        <div class="col-md-12 account-left">
                            <div class="col-md-3 account-right account-left">
                                <img src="images/<%= data.image[Object.keys(data.image)[0]]%>" class="img-responsive" width="30%" height="30%" alt="" />
                            </div>
                            <div class="col-md-3 account-left">
                                <%=data.name%>
                            </div>
                            <div class="col-md-3 account-left">
                                $
                                <%=data.price%>
                            </div>
                            <div class="col-md-3 account-right account-left">
                                X &nbsp;&nbsp;&nbsp;
                                <%=data.quantity%>
                            </div>
                        </div>
                        <hr style="border-style: solid; border-width: 1px; color: #73b6e1" />
                        <%})%>
                </div>
                <div class="account-main">
                    <div class="col-md-4">
                        <h3>Order date :
                            <%=formatDate(orderDate)%>
                        </h3>
                    </div>
                    <div class="col-md-4">
                        <h3>Status :
                            <%=status%>
                        </h3>
                    </div>
                    <div class="col-md-4">
                        <h3>Total : $
                            <%=total%>
                        </h3>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <hr style="border-style: solid; border-width: 1px; color: #73b6e1" />
                <div class="account-main">
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading text-center">
                                <h3>Sender information</h3>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="form-group">
                                    <label for="email">Name:</label>
                                    <p class="form-control">
                                        <%=fistname%>
                                            <%=lastname%>
                                    </p>
                                    <!-- <input type="text" name="name" min="4" class="form-control" disabled /> -->
                                </div>
                                <div class="form-group">
                                    <label for="email">Address:</label>
                                    <p class="form-control">
                                        <%=address%>
                                    </p>
                                </div>
                                <div class="form-group">
                                    <label for="email">Phone:</label>
                                    <p class="form-control">
                                        <%=phone%>
                                    </p>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <!-- /.panel-body -->

                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading text-center">
                                <h3>Receiver information</h3>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <form action="/admin/staff/handling-order/update/<%=idOrder%>" method="POST" />
                                <div class="form-group">
                                    <label for="email">Fullname:</label>
                                    <input type="text" class="form-control" name="receiver" value="<%=receiver%>" />
                                    <!-- <input type="text" name="name" min="4" class="form-control" disabled /> -->
                                </div>
                                <div class="form-group">
                                    <label for="email">Address:</label>
                                    <input type="text" minlength="10" maxlength="250" class="form-control" name="orderaddress" value="<%=orderaddress%>" />
                                </div>
                                <div class="form-group">
                                    <label for="email">Phone:</label>
                                    <input type="text" class="form-control" name="orderphone" value="<%=orderphone%>" pattern='[\+]\d{2}[\(]\d{2}[\)]\d{4}[\-]\d{4}'
                                        placeHolder="Phone" title="+xx(xx)xxxx-xxxx" required />
                                </div>
                                <div class="form-group">
                                    <label for="email">Receive Date:
                                        <%=formatDate(receiveDate)%>
                                    </label>
                                    <input type="date" class="form-control" name="receivedate" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="idOrder" value="<%=idOrder%>" />
                                    <input type="submit" class="btn btn-success" value="Update" />
                                    <input type="reset" class="btn btn-success" value="Reset" />
                                </div>
                                </form>
                                <div class="clearfix"></div>
                            </div>
                            <!-- /.panel-body -->

                        </div>
                    </div>
                    <!-- /.panel -->
                </div>
                <div class="account-main">
                    <div class="col-lg-6">
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">

                            <form action="/admin/staff/handling-order/view-details/<%=idOrder%>" method="POST">
                                <input type="hidden" name="idOrder" value="<%=idOrder%>" />
                                <input type="submit" class="btn btn-success" value="Confirm">
                            </form>
                            <br/>
                            <a href="/admin//staff/handling-order/view-details/print/<%=idOrder%>">
                                Print </a>
                        </div>
                    </div>
                </div>
                
                <div class="clearfix"></div>
                <br/>
                <br/>
            </div>
        </div>
        <% include ad_footer%>