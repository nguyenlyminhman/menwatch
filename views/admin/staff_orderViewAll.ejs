<% include ad_header %>
    <%

  // Add commas as thousand separators
  function formatDate(date) {
    if (date == null)
    {
      return "";
    } else {
      var date = new Date(date);
      var d = date.getDate();
      var m = date.getMonth() + 1;
      var y = date.getFullYear();
      return m + '/' + d + '/' + y;
    }

  }
%>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">
                        <h3>List All Brand </h3>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTablesOrderStaffd">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Order No.</th>
                                    <th>Customer</th>
                                    <th>Email</th>
                                    <th>Order Date</th>
                                    <th>Total (USD)</th>
                                    <th>Status</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%order.forEach(data=>{%>
                                    <tr>
                                        <td>
                                            <%=data.no %>
                                        </td>
                                        <td style="width: 50px">
                                            <%=data.id %>
                                        </td>
                                        <td>
                                            <%=data.fistname %>
                                                <%=data.lastname %>
                                        </td>
                                        <td>
                                            <%=data.email %>
                                        </td>

                                        <td>
                                            <%=formatDate(data.orderdate) %>
                                        </td>
                                        <td>
                                            <%=data.total %>
                                        </td>
                                        <td>
                                            <% if(data.status==='Pending'){%>
                                                <div class="bg-danger text-danger">
                                                    <%}else{%>
                                                        <div class="bg-success text-success">
                                                            <%}%>
                                                                <%=data.status %>
                                                        </div>
                                        </td>
                                        <td>
                                            <a href="/admin/staff/handling-order/view-details/<%=data.id%>" type="button" class="btn btn-info">Get</a>
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>
                        <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <% include ad_footer%>