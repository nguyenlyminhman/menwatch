<% include ad_header %>
    <div class="row">
        <div class="col-lg-12">
            <!--add new menu item-->
            <div class="col-lg-6">
                <%if (message.length > 0 ){%>
                    <div class="alert alert-danger">
                        <h4>
                            <%= message%>
                        </h4>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!--add new menu item-->
            <div id="addMenu" class="col-lg-6">
                <br />
                <div class="panel panel-primary">
                    <div class="panel-heading text-center">
                        Edit Style:
                        <%=stylename%>
                    </div>
                    <form action="/admin/style/edit/<%=id %>" method="POST">
                        <input type="hidden" name="_token" value="{{csrf_token()}}" />
                        <div class="form-group">
                            <label for="email">Style name:</label>
                            <input type="text" minlength="4" maxlength="50" class="form-control" name="stylename" value="<%=stylename %>" placeHolder="Brand name" required />
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                        <button type="reset" class="btn btn-default">Reset</button>
                        <a href="/admin/style/view-all" class="btn btn-default"> Back </a>
                    </form>
                    <br>
                    <div class="clearfix"></div>
                </div>
            </div>
            <!--end add new menu item-->
        </div>
    </div>
    <% include ad_footer%>