// Add commas as thousand separators
function formatDate(date) {
  if (date == null)
  {
    return "";
  } else {
    var date = new Date(date);
    var d = date.getDate();
    var m = date.getMonth() + 1;
    var y = date.getFullYear();
    return m + '/' + d + '/' + y;
  }
}
