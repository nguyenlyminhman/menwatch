<% include ad_header %>

    <div class="row">
        <div class="col-lg-12">
            <%if (message.length > 0 ){%>
                <div class="alert alert-danger">
                    <h4>
                        <%= message%>
                    </h4>
                </div>
                <%}%>
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            <div class="row">
                                <h3>Report best seller product</h3>
                            </div>
                            <hr/>
                            <div class="row">
                                <form action="/admin/product/view-all" method="POST">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label for="email">Year</label>
                                            <input type="number" class="form-control" min="2000" max="3000" name="year" placeHolder="Year" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label for="email">Month</label>
                                            <input type="number" class="form-control" min="1" max="12" name="month" placeHolder="Month" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label for="email">Number of records</label>
                                            <input type="number" class="form-control" min="1" max="100" name="record" placeHolder="Number of records" required />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <br/>
                                            <input type="submit" class="btn btn-success" value="Export to PDF">
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">

                            <div class="col-lg-6">

                            </div>
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTablesProductViewAll">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Brand</th>
                                        <th>Style</th>
                                        <th>Status</th>
                                        <th>Option</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%product.forEach(data=>{%>
                                        <tr>
                                            <td style="width: 50px">
                                                <%=data.id %>
                                            </td>
                                            <td style="width: 100px">
                                                <p>
                                                    <img class="img-responsive zoom-img" style="width: 100%; height: 100%" src="images/<%= data.image[Object.keys(data.image)[0]]%>"
                                                        alt="" />

                                                </p>
                                            </td>
                                            <td>
                                                <%=data.name %>
                                            </td>
                                            <td>
                                                <%=data.price %>
                                            </td>
                                            <td>
                                                <%=data.quantity %>
                                            </td>
                                            <td>
                                                <%=data.brandname %>
                                            </td>
                                            <td>
                                                <%=data.stylename %>
                                            </td>
                                            <td>
                                                <%if(data.status==true){%>
                                                    <div class="bg-success text-success">Active</div>
                                                    <%}else{%>
                                                        <div class="bg-danger text-danger">Disabled</div>
                                                        <%}%>
                                            </td>
                                            <td>
                                                <a href="admin/product/edit/<%=data.id%>" type="button" class="btn btn-info">Update</a>

                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
        </div>
    </div>
    <% include ad_footer%>