<% include ad_header %>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h3>List All Brand </h3>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Brand</th>
                                <th>Style</th>
                                <th>Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%product.forEach(data=>{%>
                                <tr>
                                    <td style="width: 50px">
                                        <%=data.id %>
                                    </td>
                                    <td style="width: 100px">
                                        <p>
                                            <img class="img-responsive zoom-img" style="width: 100%; height: 100%" src="images/<%= data.image[Object.keys(data.image)[0]]%>"
                                                alt="" />

                                        </p>
                                    </td>
                                    <td>
                                        <%=data.name %>
                                    </td>

                                    <td>
                                        <%=data.brandname %>
                                    </td>
                                    <td>
                                        <%=data.stylename %>
                                    </td>
                                    <td>
                                        <a href="admin/brand/edit/<%=data.id%>" type="button" class="btn btn-warning">Edit</a>

                                        <a href="admin/brand/delete/<%=data.id%>" type="button" class="btn btn-danger" onclick='return confirm("Lưu Ý: Sau khi xóa dữ liệu liên quan cũng sẽ mất.\n           Có chắc muốn xóa dòng này?");'>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <% include ad_footer%>