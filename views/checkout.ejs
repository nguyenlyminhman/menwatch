<!--header-->
<%include header%>
	<!--end of header-->
	<!--start-breadcrumbs-->
	<div class="breadcrumbs">
		<div class="container">
			<div class="breadcrumbs-main">
				<ol class="breadcrumb">
					<li>
						<a href="/">Home</a>
					</li>
					<li class=""><a href="/shopping-cart">Shopping cart</a></li>
					<li class="">Check out</li>
				</ol>
			</div>
		</div>
	</div>
	<!--end-breadcrumbs-->
	<!--start-ckeckout-->
	<div class="register">
		<div class="container">
			<div class="register-top heading">
				<h2>Check Out</h2>
				<h4>Your Total:
					<%if(!session.cart){%>
						0 $
						<%}else{%>
							<%=session.cart.totalPrice%> $
								<%}%>
				</h4>
			</div>
			<div id="charge-error" class="alert alert-danger hidden">

			</div>
			<form action="/checkout" method="Post" id="checkout-form">
				<div class="register-main">
					<h2> Order information</h2>
				</div>
				<div class="register-main">
					<div class="col-md-6 account-left">
						<input placeholder="Order address" type="text" name="orderaddress" tabindex="1" required>
					</div>
					<div class="col-md-6 account-left">
						<input placeholder="Order phone" type="text" name="orderphone" tabindex="2" required>
					</div>
					<div class="clearfix"></div>
				</div>
				<br>
				<div class="register-main">
					<h2> Card information</h2>
				</div>
				<div class="register-main">
					<div class="col-md-6 account-left">
						<input placeholder="Card holder name" type="text" name="cardname" id="cardname" tabindex="3" required>
						<input placeholder="Credit card number" type="text" name="cardnumber" id="cardnumber" tabindex="4" required>
						<input placeholder="CVC" type="text" name="cardcvc" id="cardcvc" tabindex="5" required>
					</div>
					<div class="col-md-6 account-left">
						<input placeholder="Expiration month" type="text" name="cardmonth" id="cardmonth" tabindex="6" required>
						<input placeholder="Expiration year" type="text" name="cardyear" id="cardyear" tabindex="7" required>
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="address submit">
					<input tabindex="8" type="submit" value="Check Out">
				</div>
		</div>
	</div>
	<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
	<script type="text/javascript" src="js/checkout.js"></script>

	<!--end-ckeckout-->
	<!--footer-->
	<% include footer %>
		<!--end of footer-->