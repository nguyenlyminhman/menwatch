<%

  // Add commas as thousand separators
  function formatDate(date) {
    if (date == null)
    {
      return "";
    } else {
      var date = new Date(date);
      var d = date.getDate();
      var m = date.getMonth() + 1;
      var y = date.getFullYear();
      return m + '/' + d + '/' + y;
    }

  }
%>

    <!--header-->
    <%include header%>
        <!--end of header-->
        <!--start-breadcrumbs-->
        <div class="breadcrumbs">
            <div class="container">
                <div class="breadcrumbs-main">
                    <ol class="breadcrumb">
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li class="">Order details</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--end-breadcrumbs-->
        <!--account-starts-->
        <div class="account">
            <div class="container">
                <div class="account-top heading">
                    <h2>Order Details</h2>
                </div>
                <div class="account-main">
                    <div class="col-md-3 account-left">
                        <h3>OrderNo :
                            <%=idOrder%>
                        </h3>
                        <div class="account-bottom">
                        </div>
                    </div>
                    <div class="col-md-3 account-right account-left">
                        <h3>Order date :
                            <%=formatDate(orderDate)%>
                        </h3>
                    </div>
                    <div class="col-md-3 account-right account-left">
                        <h3>Status :
                            <%=status%>
                        </h3>
                    </div>
                    <div class="col-md-3 account-right account-left">
                        <h3>Total : $
                            <%=total%>
                        </h3>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="account-top heading">
                </div>
                <div class="account-main">

                    <hr style="border-style: solid; border-width: 1px; color: #73b6e1" />
                    <%product.forEach(data=>{%>
                        <div class="col-md-12 account-left">
                            <div class="col-md-3 account-right account-left">
                                <img src="images/<%= data.image[Object.keys(data.image)[0]]%>" class="img-responsive" width="30%" height="30%" alt="" />
                            </div>
                            <div class="col-md-3 account-left">
                                <%=data.name%>
                            </div>
                            <div class="col-md-3 account-left">
                                $<%=data.price%>
                            </div>
                            <div class="col-md-3 account-right account-left">
                                X &nbsp;&nbsp;&nbsp;
                                <%=data.quantity%>
                            </div>
                        </div>
                        <hr style="border-style: solid; border-width: 1px; color: #73b6e1" />
                        <%})%>
                </div>
                <div class="account-main">
                    <div class="col-md-4 account-right account-left">
                        <h3>Receiver Name</h3>
                        <p> <%=receiver%></p>
                        
                    </div>
                    <div class="col-md-4 account-right account-left">
                        <h3>Address</h3>
                        <p> <%=orderaddress%></p>
                    </div>
                    <div class="col-md-4 account-right account-left">
                        <h3>Phone</h3>
                        <p> <%=orderphone%></p>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>


        <!--account-end-->
        <!--footer-->
        <%include footer%>
            <!--end of footer-->