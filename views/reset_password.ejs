<!--header-->
<%include header%>
	<!--end of header-->
	<!--start-breadcrumbs-->
	<div class="breadcrumbs">
		<div class="container">
			<div class="breadcrumbs-main">
				<ol class="breadcrumb">
					<li>
						<a href="/">Home</a>
					</li>
					<li class="active">Reset password</li>
				</ol>
			</div>
		</div>
	</div>
	<!--end-breadcrumbs-->
	<!--account-starts-->
	<div class="account">
		<div class="container">
			<div class="account-top heading">
				<%if (message.length > 0 ){%>
					<div class="alert alert-info">
						<h4>
							<%= message%>
						</h4>
					</div>
					<%}%>
						<h2>Reset Password</h2>
			</div>
			<div class="account-main">
				<div class="col-md-6 account-left">
					<h3>Your email address</h3>
					<div class="account-bottom">
						<form action="/reset-password" method="POST">
							<input placeholder="Email" type="email" name="email" tabindex="3" required>
							<div class="address">
								<input type="hidden"  name="_csrf"  value="<%=csrfToken%>">
								<input type="submit" value="Send password reset email">
							</div>
						</form>
					</div>
				</div>
				<div class="col-md-6 account-right account-left">
					<h3>&nbsp;</h3>
                    <p>Enter your email address and we will send you a new password. </p>
                    <p>Please ! Change the new password after you logged-in. </p>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
	<!--account-end-->
	<!--footer-->
	<%include footer%>
		<!--end of footer-->