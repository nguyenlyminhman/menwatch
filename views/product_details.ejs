<!--header-->
<% include header%>
	<!--end of header-->
	<!--start-breadcrumbs-->
	<%product.forEach((data)=>{%>
		<div class="breadcrumbs">
			<div class="container">
				<div class="breadcrumbs-main">
					<ol class="breadcrumb">
						<li>
							<a href="/">Home</a>
						</li>
						<li class="">Product Details</li>
						<li class="">
							<%=data.name%>
						</li>
					</ol>
				</div>
			</div>
		</div>
		<!--end-breadcrumbs-->
		<!--start-single-->
		<div class="single contact">
			<div class="container">
				<div class="single-main">
					<div class="col-md-9 single-main-left">

						<div class="sngl-top">
							<div class="col-md-5 single-top-left">
								<div class="flexslider">
									<ul class="slides">

										<li data-thumb="images/<%= data.image[Object.keys(data.image)[0]]%>">
											<div class="thumb-image">
												<img src="images/<%= data.image[Object.keys(data.image)[0]]%>" data-imagezoom="true" class="img-responsive" alt="" />
											</div>
										</li>
										<li data-thumb="images/<%= data.image[Object.keys(data.image)[1]]%>">
											<div class="thumb-image">
												<img src="images/<%= data.image[Object.keys(data.image)[1]]%>" data-imagezoom="true" class="img-responsive" alt="" />
											</div>
										</li>
										<li data-thumb="images/<%= data.image[Object.keys(data.image)[2]]%>">
											<div class="thumb-image">
												<img src="images/<%= data.image[Object.keys(data.image)[2]]%>" data-imagezoom="true" class="img-responsive" alt="" />
											</div>
										</li>
									</ul>
								</div>
								<!-- FlexSlider -->
								<script src="js/imagezoom.js"></script>
								<script defer src="js/jquery.flexslider.js"></script>
								<link rel="stylesheet" href="css/flexslider.css" type="text/css" media="screen" />
								<script>
									// Can also be used with $(document).ready()
									$(window).load(function () {
										$('.flexslider').flexslider({
											animation: "slide",
											controlNav: "thumbnails"
										});
									});
								</script>
							</div>
							<div class="col-md-7 single-top-right">
								<div class="single-para simpleCart_shelfItem">
									<h2>
										<%=data.name%>
									</h2>
									<h5 class="item_price">$
										<%=data.price %>
									</h5>
									<ul class="tag-men">
										<li>
											<span>
												<strong> Movement Type: </strong> &nbsp;&nbsp;
												<%= data.details[Object.keys(data.details)[1]]%>
											</span>
										</li>
										<li>
											<br />
										</li>
										<li>
											<span>
												<strong>Case Size: </strong> &nbsp;&nbsp;
												<%= data.details[Object.keys(data.details)[0]]%>
											</span>
										</li>
										<li>
											<br />
										</li>
										<li>
											<span>
												<strong>Strap Material: </strong> &nbsp;&nbsp;
												<%= data.details[Object.keys(data.details)[2]]%>
											</span>
										</li>
										<li>
											<br />
										</li>
										<li>
											<span>
												<strong>Water Resistant: </strong> &nbsp;&nbsp;
												<%= data.details[Object.keys(data.details)[3]]%>
											</span>

										</li>
										<li>
											<br />
										</li>
									</ul>
									<br />
									<a href="addtocart/<%=data.id%>/1" class="add-cart item_add">ADD TO CART</a>
									<!-- Go to www.addthis.com/dashboard to customize your tools -->
									<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-576b61d0718907f4"></script>
									<!-- Go to www.addthis.com/dashboard to customize your tools -->
									<!-- <div class="addthis_inline_share_toolbox_2oii"></div> -->
								</div>
							</div>
							<div class="clearfix"> </div>
						</div>
						<div class="tabs">
							<ul class="menu_drop">
								<li class="item1">
									<a href="#">
										<img src="images/arrow.png" alt="">Description</a>
									<ul>
										<li class="subitem1">
											<a>
												<%=data.description %>
											</a>
										</li>
									</ul>
								</li>
								<li class="item3">
									<a href="#">
										<img src="images/arrow.png" alt="">Comment</a>
									<div class="fb-comments" style="background-color: white" data-href="https://menwatch.herokuapp.com/" data-width="825" data-numposts="5"></div>
								</li>
							</ul>
						</div>
						<% })%>
							<!-- hot product -->
							<div class="latestproducts">
								<div class="product-one">
									<%hotProduct.forEach((data)=>{%>
										<div class="col-md-4 product-left p-left">
											<div class="product-main simpleCart_shelfItem">
												<a href="product-details/<%=data.id%>" class="mask">
													<img class="img-responsive zoom-img" style="width: 225px; height: 250px" src="images/<%= data.image[Object.keys(data.image)[0]]%>"
													 alt="" />
												</a>
												<div class="product-bottom">
													<h3>
														<%=data.name%>
													</h3>
													<h4>
														<a class="item_add" href="addtocart/<%=data.id%>/1">
															<i></i>
														</a>
														<span class=" item_price">$
															<%=data.price%>
														</span>
													</h4>
												</div>
												<div class="srch">
													<a href="addtocart/<%=data.id%>/1" style="text-decoration: none">
														<span>Add to Cart</span>
													</a>
												</div>
											</div>
										</div>
										<%})%>
											<div class="clearfix"></div>
								</div>
							</div>
							<!--end hot product -->
							<!-- latest product -->
							<div class="latestproducts">
								<div class="product-one">
									<%latestProduct.forEach((data)=>{%>
										<div class="col-md-4 product-left p-left">
											<div class="product-main simpleCart_shelfItem">
												<a href="product-details/<%=data.id%>" class="mask">
													<img class="img-responsive zoom-img" style="width: 225px; height: 250px" src="images/<%= data.image[Object.keys(data.image)[0]]%>"
													 alt="" />
												</a>
												<div class="product-bottom">
													<h3>
														<%=data.name%>
													</h3>
													<h4>
														<a class="item_add" href="addtocart/<%=data.id%>/1">
															<i></i>
														</a>
														<span class=" item_price">$
															<%=data.price%>
														</span>
													</h4>
												</div>
												<div class="srch">
													<a href="addtocart/<%=data.id%>/1" style="text-decoration: none">
														<span>Add to Cart</span>
													</a>
												</div>
											</div>
										</div>
										<%})%>
											<div class="clearfix"></div>
								</div>
							</div>
							<!--end latest product -->

					</div>
					<!-- right menu -->
					<%include right_menu%>
						<!-- end of right menu -->
						<div class="clearfix"> </div>
				</div>
			</div>
		</div>
		<!--end-single-->
		<!--footer-->
		<% include footer%>
			<!--end of footer-->